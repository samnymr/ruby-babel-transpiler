  s.files = [
    'LICENSE',
    'lib/babel.js',
    'lib/babel/external-helpers.js',
    'lib/babel/polyfill.js',
    'lib/babel/source.rb'
  ]

  s.authors = ['Sebastian McKenzie']
  s.email   = 'sebmck@gmail.com'
